---
layout: base.njk
title: Blog
permalink: /blog/index.html
---

<h1 class="blog-heading">Latest Articles</h1>

<div class="blog-grid">

{% for post in collections.blog | reverse %}

  <div class="blog-card">

    <a href="{{ post.url }}">
      {% if post.data.image %}
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="blog-image">
      {% endif %}
    </a>

    <div class="blog-content">

      {% if post.data.category %}
        <span class="blog-category">{{ post.data.category }}</span>
      {% endif %}

      <h2 class="blog-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>

      {% if post.data.excerpt %}
        <p class="blog-excerpt">{{ post.data.excerpt }}</p>
      {% endif %}

    </div>

  </div>

{% endfor %}

</div>

<style>

.blog-heading {
  margin-bottom: 40px;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
  gap: 50px;
}

.blog-card {
  border-radius: 14px;
  overflow: hidden;
}

.blog-image {
  width: 100%;
  height: 320px;
  object-fit: cover;
  border-radius: 14px;
  transition: transform 0.3s ease;
}

.blog-card:hover .blog-image {
  transform: scale(1.02);
}

.blog-content {
  margin-top: 15px;
}

.blog-category {
  font-size: 14px;
  font-weight: bold;
  color: #555;
  display: inline-block;
  margin-bottom: 8px;
}

.blog-title {
  font-size: 28px;
  line-height: 1.3;
  margin: 10px 0;
}

.blog-title a {
  text-decoration: none;
  color: #111;
}

.blog-title a:hover {
  color: #007bff;
}

.blog-excerpt {
  font-size: 16px;
  color: #555;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .blog-grid {
    grid-template-columns: 1fr;
  }
}

</style>
