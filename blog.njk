---
layout: base.njk
title: Blog
permalink: /blog/index.html
---

<h1 class="blog-heading">Latest Articles</h1>

<div class="blog-wrapper">

{% for post in collections.blog | reverse %}

  <div class="blog-card">

    <!-- Featured Image -->
    {% if post.data.image %}
      <a href="{{ post.url }}">
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="blog-image">
      </a>
    {% endif %}

    <!-- Title -->
    <h2 class="blog-title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>

    <!-- Excerpt -->
    {% if post.data.excerpt %}
      <p class="blog-excerpt">
        {{ post.data.excerpt }}
      </p>
    {% endif %}

    <!-- Read More Button -->
    <a href="{{ post.url }}" class="read-btn">
      Read Full Blog
    </a>

  </div>

{% endfor %}

</div>


<style>

/* Wrapper */
.blog-wrapper {
  max-width: 1100px;
  margin: 0 auto;
  padding: 20px;
}

/* Card */
.blog-card {
  margin-bottom: 60px;
}

/* Image */
.blog-image {
  width: 100%;
  max-width: 700px;
  height: 350px;
  object-fit: cover;
  border-radius: 10px;
  display: block;
  margin-bottom: 20px;
}

/* Title */
.blog-title {
  font-size: 30px;
  margin-bottom: 15px;
}

.blog-title a {
  text-decoration: none;
  color: #111;
}

.blog-title a:hover {
  color: #007bff;
}

/* Excerpt */
.blog-excerpt {
  max-width: 75%;
  font-size: 17px;
  line-height: 1.6;
  color: #444;
  margin-bottom: 20px;
}

/* Button */
.read-btn {
  display: inline-block;
  padding: 10px 18px;
  background-color: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
}

.read-btn:hover {
  background-color: #0056b3;
}

/* Responsive */
@media (max-width: 768px) {

  .blog-excerpt {
    max-width: 100%;
  }

  .blog-image {
    height: 250px;
  }

}

</style>
