---
layout: base.njk
title: PR
permalink: /pr/index.html
---

<h1 class="pr-heading">Latest Press Releases</h1>

<div class="pr-wrapper">

{% for item in collections.pr | reverse %}

  <div class="pr-card">

    <!-- Featured Image -->
    {% if item.data.image %}
      <a href="{{ item.url }}">
        <img src="{{ item.data.image }}" alt="{{ item.data.title }}" class="pr-image">
      </a>
    {% endif %}

    <!-- Title -->
    <h2 class="pr-title">
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </h2>

    <!-- Description -->
    {% if item.data.description %}
      <p class="pr-description">
        {{ item.data.description }}
      </p>
    {% endif %}

    <!-- Read Button -->
    <a href="{{ item.url }}" class="read-btn">
      Read Full PR
    </a>

  </div>

{% endfor %}

</div>


<style>

/* Wrapper */
.pr-wrapper {
  max-width: 1100px;
  margin: 0 auto;
  padding: 20px;
}

/* Card spacing */
.pr-card {
  margin-bottom: 60px;
}

/* Image */
.pr-image {
  width: 100%;
  max-width: 700px;
  height: 350px;
  object-fit: cover;
  border-radius: 10px;
  display: block;
  margin-bottom: 20px;
}

/* Title */
.pr-title {
  font-size: 30px;
  margin-bottom: 15px;
}

.pr-title a {
  text-decoration: none;
  color: #111;
}

.pr-title a:hover {
  color: #007bff;
}

/* Description */
.pr-description {
  max-width: 75%;
  font-size: 17px;
  line-height: 1.6;
  color: #444;
  margin-bottom: 20px;
}

/* Button */
.read-btn {
  display: inline-block;
  padding: 10px 18px;
  background-color: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
}

.read-btn:hover {
  background-color: #0056b3;
}

/* Responsive */
@media (max-width: 768px) {

  .pr-description {
    max-width: 100%;
  }

  .pr-image {
    height: 250px;
  }

}

</style>
